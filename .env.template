# ==================== API KEYS ====================
# OpenRouter API (Primary - 100+ models)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Alibaba Cloud APIs (Qwen models)
ALIBABA_API_KEY=your-alibaba-key-here
ALIBABA_API_SECRET=your-alibaba-secret-here

# Optional External APIs (for extended capabilities)
MISTRAL_API_KEY=your-mistral-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here
STABILITY_API_KEY=your-stability-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GROQ_API_KEY=your-groq-key-here

# ==================== DATABASE CONFIG ====================
# SQLite (Primary)
DATABASE_URL=sqlite:///lex_memory.db

# Optional: PostgreSQL for advanced memory
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=lex
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=lex_memory

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# Optional: Milvus for vector storage
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ==================== SERVER CONFIG ====================
# Production server settings
ENV=production
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# Security
LEXOS_SECRET_KEY=generate-a-strong-secret-key-here-min-32-chars
JWT_SECRET_KEY=generate-another-strong-secret-for-jwt-here
ALLOWED_ORIGINS=https://lexcommand.ai,https://www.lexcommand.ai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ==================== FEATURE FLAGS ====================
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_BACKUP=true

# ==================== MONITORING ====================
LOG_FILE=lex.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Health Check
HEALTH_CHECK_TIMEOUT=30

# ==================== PRODUCTION OPTIMIZATIONS ====================
# SQLite optimizations
SQLITE_WAL_MODE=true
SQLITE_CACHE_SIZE=10000
SQLITE_JOURNAL_MODE=WAL

# Performance
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100